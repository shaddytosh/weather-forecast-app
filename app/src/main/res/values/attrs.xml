    <declare-styleable name="Theme.KRC">
        <attr name="textGradient" format="reference"/>
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gradientShade1" />
        <attr name="gradientShade2" />
    </declare-styleable>

    <declare-styleable name="OtpComponent">
        <attr name="length" format="integer"/>
